#include <dt-bindings/interrupt-controller/arm-gic.h>
#include <dt-bindings/gpio/tegra-gpio.h>
#include <dt-bindings/thermal/thermal.h>
#include "tegra186-quill-spmic-p3310-1000-a00-00.dtsi"

/* THERMAL gpio definitions */
#define TEMP_ALERT		TEGRA_GPIO(V, 0)

/ {
	i2c@c250000 {
		status = "okay";

		tegra_nct72: onsemi,nct72@4c {
			status = "okay";
			#thermal-sensor-cells = <1>;
			compatible = "onsemi,nct72";
			reg = <0x4c>;
			sensor-name = "tmp451-ext";
			supported-hwrev = <1>;
			offset = <0>;
			conv-rate = <0x06>;
			extended-rage = <1>;

			interrupt-parent = <&tegra_gpio>;
			interrupts = <TEMP_ALERT IRQ_TYPE_LEVEL_LOW>;
			temp-alert-gpio = <&tegra_gpio TEMP_ALERT 0>;

			vdd-supply = <&vdd_dummy_1v8>;
			loc {
				/* set to maximum for not having local  shutdown */
				shutdown-limit = <110>;
			};
			ext {
				shutdown-limit = <110>;
			};
		};
	};

	thermal-zones {
		status = "okay";

		Tboard_tegra {
			status = "okay";
			polling-delay = <0>;
			polling-delay-passive = <1000>;
			thermal-sensors = <&tegra_nct72 0>;

			thermal-zone-params {
				governor-name = "pid_thermal_gov";
			};

			trips {
				trip@0 {
					type = "critical";
					temperature = <110000>;
					hysteresis = <1>;
				};
			};
		};

		Tdiode_tegra {
			status = "okay";
			polling-delay = <0>;
			polling-delay-passive = <1000>;
			thermal-sensors = <&tegra_nct72 1>;

			thermal-zone-params {
				governor-name = "pid_thermal_gov";
			};

			trips {
				trip@0 {
					type = "critical";
					temperature = <110000>;
					hysteresis = <1>;
				};
			};
		};
	};
};
